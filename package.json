{
    "name": "perfect-cache",
    "version": "1.0.7",
    "description": "browser cache lib",
    "scripts": {
        "build": "vite build",
        "test": "jest test",
        "pre": "pnpm setup && pnpm root -g && pnpm install && husky init",
        "eslint": "eslint --fix --no-warn-ignored --no-error-on-unmatched-pattern ./src",
        "stylelint": "stylelint --fix --allow-empty-input \"./**/*.{less,scss,css,vue}\"",
        "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
        "prettier": "prettier --no-error-on-unmatched-pattern ./ --write"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/avicha/perfect-cache.git"
    },
    "keywords": [
        "browser",
        "cache"
    ],
    "author": "avicha",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/avicha/perfect-cache/issues"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/perfect-cache.umd.js",
    "module": "src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./dist/perfect-cache.umd.js"
        }
    },
    "publishConfig": {
        "main": "./dist/perfect-cache.umd.js",
        "module": "./dist/perfect-cache.es.js",
        "exports": {
            ".": {
                "import": "./dist/perfect-cache.es.js",
                "require": "./dist/perfect-cache.umd.js"
            }
        }
    },
    "homepage": "https://github.com/avicha/perfect-cache#readme",
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@easy-fe/ci-configs": "^1.0.0",
        "@easy-fe/stylelint-config": "^1.0.0",
        "@easy-fe/types": "^1.0.0",
        "@types/debug": "^4.1.12",
        "@types/jest": "^29.5.14",
        "@types/js-cookie": "^3.0.6",
        "babel-jest": "^29.7.0",
        "eslint": "^9.24.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "stylelint": "^16.18.0",
        "ts-jest": "^29.3.1",
        "typescript": "^5.8.3",
        "vite": "^6.2.6"
    },
    "dependencies": {
        "debug": "^4.4.0",
        "js-cookie": "^3.0.5",
        "mitt": "^3.0.1"
    }
}
