{
    "include": ["./**/*"],
    "compilerOptions": {
        "types": [
            "debug",
            "js-cookie",
            "./node_modules/@easy-fe/types",
            "./node_modules/@vitest/browser/providers/playwright"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {},
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "composite": true
    }
}
